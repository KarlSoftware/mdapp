<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/notes_edit_medications_layout">
	<android.support.v7.widget.Toolbar android:id="@+id/notes_edit_medications_toolbar" android:layout_alignParentTop="true" style="@style/toolbar">
		<LinearLayout android:id="@+id/notes_edit_medications_toolbar_search_layout" style="@style/toolbar_search_layout">
			<EditText android:id="@+id/notes_edit_medications_toolbar_search" android:hint="@string/notes_edit_medications_toolbar_search_hint" style="@style/toolbar_search_edittext"/>
		</LinearLayout>
	</android.support.v7.widget.Toolbar>
	<ListView android:id="@+id/notes_edit_medications_list" android:layout_below="@+id/notes_edit_medications_toolbar" style="@style/notes_edit_medications_list_layout"/>
	<TextView android:id="@+id/notes_edit_medications_list_empty" android:layout_below="@+id/notes_edit_medications_toolbar" android:text="@string/notes_edit_medications_list_empty" style="@style/notes_edit_medications_list_empty"/>
	<android.support.design.widget.FloatingActionButton android:id="@+id/notes_edit_medications_fab" android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:src="@drawable/ic_search_white_24dp" style="@style/fab_layout"/>
</RelativeLayout>