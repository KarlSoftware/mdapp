<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/interactions_cards_card" style="@style/interactions_cards_card_layout">

    <RelativeLayout style="@style/interactions_cards_card_inner_layout">

        <ImageView android:id="@+id/interactions_cards_card_icon" android:layout_alignParentTop="true" android:contentDescription="@string/interactions_cards_card_image_content_description" style="@style/interactions_cards_card_icon"/>

        <TextView android:id="@+id/interactions_cards_card_title" android:layout_alignParentTop="true" style="@style/interactions_cards_card_title"/>
        <TextView android:id="@+id/interactions_cards_card_text" android:layout_below="@+id/interactions_cards_card_title" style="@style/interactions_cards_card_text"/>
        <TextView android:id="@+id/interactions_cards_card_relevance" android:layout_below="@+id/interactions_cards_card_text" style="@style/interactions_cards_card_relevance"/>

        <View android:id="@+id/interactions_cards_card_separator" android:layout_below="@+id/interactions_cards_card_relevance" style="@style/colored_card_separator"/>

        <LinearLayout android:layout_below="@+id/interactions_cards_card_separator" style="@style/interactions_cards_card_buttons_layout">

            <TextView android:id="@+id/interactions_cards_card_button_handling" android:text="@string/interactions_cards_card_button_handling" style="@style/colored_card_button"/>
            <TextView android:id="@+id/interactions_cards_card_button_uri" android:text="@string/interactions_card_button_read_more" style="@style/colored_card_button"/>
            <TextView android:id="@+id/interactions_cards_card_button_pubmed_search_uri" android:text="@string/interactions_card_button_search_pubmed" style="@style/colored_card_button"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>